{
    "version": "2.0.0",
    "options":
    {
        "env": 
        {
            "COB_CONFIG_DIR":   "C:\\GnuCOBOL\\share\\gnucobol\\config",
            "COB_COPY_DIR":     "C:\\GnuCOBOL\\share\\gnucobol\\copy",
            "COB_VARSEQ_FORMAT": "0",
            "MINGW_ROOT_PATH":  "C:\\GnuCOBOL\\",
            "PATH":             "C:\\GnuCOBOL\\bin"       
        }
    },
    "tasks":
    [
        {
            "label": "Compile Selected Program",
            "type": "process",
            "command": "C:\\GnuCOBOL\\bin\\cobc.exe",
            "args":
            [
                "-x",
                "-o",
                "${workspaceFolder}\\Bin\\${fileBasenameNoExtension}.exe",
                "${fileBasenameNoExtension}.cob",
                "-I${workspaceFolder}\\CopyBooks",
                "-std=cobol2002",
                "-T",
                "${workspaceFolder}\\Listings\\${fileBasenameNoExtension}.lst",
                "--tsymbols",
                "-v",
                "-debug"
            ],
            "problemMatcher": "$gnucobol-cobc",
            "group":
            {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Compile and Run Selected Program",
            "type": "process",
            "command": "${workspaceFolder}\\Bin\\${fileBasenameNoExtension}.exe",
            "dependsOn":
            [
                "Compile Selected Program"
            ],
            "problemMatcher": "$gnucobol-cobc"
        },
        {
            "label": "Compile RDWADJST",
            "type": "process",
            "command": "C:\\GnuCOBOL\\bin\\cobc.exe",
            "args":
            [
                "-x",
                "-o",
                "${workspaceFolder}\\Bin\\RDWADJST.exe",
                "RDWADJST.cob",
                "-I${workspaceFolder}\\CopyBooks",
                "-std=mf", // Required for COMP-X fields and CBL_OPEN_FILE etc
                "-T",
                "${workspaceFolder}\\Listings\\RDWADJST.lst",
                "--tsymbols",
                "-v",
                //"-debug"
            ],
            "problemMatcher": "$gnucobol-cobc",
            "group":
            {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Compile and Run RDWADJST",
            "type": "process",
            "command": "${workspaceFolder}\\Bin\\RDWADJST.exe",
            "args": 
            [
                "${workspaceFolder}\\Data\\TESTIO2.Output.bin",
                "GC2MF"
            ],
            "dependsOn":
            [
                "Compile RDWADJST"
            ],
            "problemMatcher": "$gnucobol-cobc"
        },
        {
            "label": "Run RDWADJST - GC2MF",
            "type": "process",
            "command": "${workspaceFolder}\\Bin\\RDWADJST.exe",
            "args": 
            [
                "${workspaceFolder}\\Data\\TESTIO2.Output.bin",
                "GC2MF"
            ],
            "problemMatcher": "$gnucobol-cobc"
        },
        {
            "label": "Run RDWADJST - MF2GC",
            "type": "process",
            "command": "${workspaceFolder}\\Bin\\RDWADJST.exe",
            "args": 
            [
                "${workspaceFolder}\\Data\\TESTIO2.Output.bin",
                "MF2GC"
            ],
            "problemMatcher": "$gnucobol-cobc"
        },
        {
            "label": "Compile TRNSLATT",
            "type": "process",
            "command": "C:\\GnuCOBOL\\bin\\cobc.exe",
            "args":
            [
                "-x",
                "-o",
                "${workspaceFolder}\\Bin\\TRNSLATT.exe",
                "TRNSLATT.cob",
                "TRNSLAT.cob",
                "-I${workspaceFolder}\\CopyBooks",
                "-std=cobol2002",
                "-T",
                "${workspaceFolder}\\Listings\\TRNSLATT.lst",
                "--tsymbols",
                "-v",
                "-debug"
            ],
            "problemMatcher": "$gnucobol-cobc",
            "group":
            {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Compile and Run TRNSLATT",
            "type": "process",
            "command": "${workspaceFolder}\\Bin\\TRNSLATT.exe",
            "args": 
            [
            ],
            "dependsOn":
            [
                "Compile TRNSLATT"
            ],
            "problemMatcher": "$gnucobol-cobc"
        },
        {
            "label": "Run TRNSLATT",
            "type": "process",
            "command": "${workspaceFolder}\\Bin\\TRNSLATT.exe",
            "args": 
            [
            ],
            "problemMatcher": "$gnucobol-cobc"
        },
        {
            "label": "Run SET to see environment variables",
            "type": "shell",
            "command": "set",
            "args":
            [
            ],
            "problemMatcher": "$gnucobol-cobc"
        },
    ]
}